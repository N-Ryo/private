<%= form_with(model: @direct_message, remote: true) do |f| %>
  <%= f.hidden_field :from_id, value: @direct_message.from_id %>
  <%= f.hidden_field :to_id, value: @direct_message.to_id %>
  <%= f.text_field :message, class: 'form-control' %>
  <%= f.submit value="update", class: "btn btn-primary" %>
<% end %>
